{
    "name": "component-library",
    "version": "1.0.0",
    "description": "A component library for react and react native",
    "main": "index.js",
    "scripts": {
        "build": "rollup -c",
        "build-storybook": "storybook build",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
        "lint": "eslint src",
        "lint-staged": "lint-staged",
        "lint-prepush": "lint-prepush",
        "precise-commits": "precise-commits",
        "prepare": "husky install",
        "prepublishOnly": "npm run build",
        "start": "rollup -c -w",
        "storybook": "storybook dev -p 6006",
        "test": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fluse9/component-library.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/fluse9/component-library/issues"
    },
    "homepage": "https://github.com/fluse9/component-library#readme",
    "dependencies": {
        "@storybook/react": "^7.0.12",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "styled-components": "^5.3.10"
    },
    "devDependencies": {
        "@babel/core": "^7.21.8",
        "@babel/preset-env": "^7.21.5",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.21.5",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-node-resolve": "^15.0.2",
        "@storybook/addon-essentials": "^7.0.17",
        "@storybook/addon-interactions": "^7.0.17",
        "@storybook/addon-links": "^7.0.17",
        "@storybook/blocks": "^7.0.17",
        "@storybook/cli": "^7.0.12",
        "@storybook/react-webpack5": "^7.0.17",
        "@storybook/testing-library": "^0.0.14-next.2",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "@types/jest": "^29.5.1",
        "@types/react": "^18.2.6",
        "@types/react-dom": "^18.2.4",
        "@types/storybook__react": "^5.2.1",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.41.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-node": "^0.3.7",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-storybook": "^0.6.12",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jsdom": "^22.1.0",
        "lint-prepush": "^2.2.1",
        "lint-staged": "^13.2.2",
        "path": "^0.12.7",
        "precise-commits": "^1.0.2",
        "prettier": "^2.8.8",
        "rollup": "^2.79.1",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-typescript2": "^0.34.1",
        "storybook": "^7.0.17",
        "typescript": "^5.0.4"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "eslint src"
        ]
    },
    "lint-prepush": {
        "base": "develop",
        "tasks": {
            "**/*.{js,jsx,ts,tsx}": [
                "eslint src"
            ]
        }
    },
    "jest": {
        "testMatch": [
            "**/*.test.tsx",
            "**/*.spec.tsx"
        ],
        "testEnvironment": "jsdom"
    }
}
